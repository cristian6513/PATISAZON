@model PATISAZON.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "¿Olvidó su contraseña?";
}
<br />
<!-- ========== signin-section start ========== -->
<section class="signin-section">
    <div class="container-fluid">
        <div class="row g-0 auth-row">
            <div class="col-lg-6">
                <div class="auth-cover-wrapper bg-primary-100">
                    <div class="auth-cover">
                        <div class="title text-center">
                        </div>
                        <div class="cover-image">
                            <img src="~/Imagenes/autenticacion/reset-password.svg" alt="" />
                        </div>
                        <div class="shape-image">
                            <img src="~/Imagenes/autenticacion/shape.svg" alt="" />
                        </div>
                    </div>
                </div>
            </div>
            <!-- end col -->
            <div class="col-lg-6">
                <div class="signup-wrapper">
                    <div class="form-wrapper">
                        <h4 class="mb-15">@ViewBag.Title</h4>
                        <h6>Especifique su correo electrónico</h6>
                        <hr />
                        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="row">
                                <!-- end col -->
                                <div class="col-12">
                                    <div class="input-style-1">
                                        @Html.LabelFor(m => m.Email)
                                        <br />
                                        <br />
                                        @Html.TextBoxFor(m => m.Email)
                                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <!-- end col -->
                                <div class="col-12">
                                    <div class="button-group d-flex justify-content-center flex-wrap">
                                        <button type="submit" class="main-btn primary-btn btn-hover w-100 text-center">
                                            Vínculo de correo electrónico
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <!-- end row -->
                        }
                    </div>
                </div>
            </div>
            <!-- end col -->
        </div>
        <!-- end row -->
    </div>
</section>
