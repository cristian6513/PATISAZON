@model List<PATISAZON.Models.Platillos>

@{
    ViewBag.Title = "Platillos";
}
<br />
<div style="background-color:white; padding:30px">
    <h2 class="text-center">MENÚ</h2>
    <div class="contenido">
        @foreach (var item in Model)
        {
            <figure class="snip1249">
                <div class="image">
                    <img src="@item.foto_platillo" alt="@item.nombre_platillo" style="width:320px; height:210px;" />
                </div>
                <figcaption>
                    <h5>@item.nombre_platillo</h5>
                    <div class="price">
                        $ @item.precio_platillo
                    </div>
                    <a href="~/Shopping/Agregar/@item.id" class="btn btn-outline-info"><i class="fas fa-cart-plus"></i></a>
                    <a href="~/Shopping/Detalles/@item.id" class="btn btn-outline-primary">VER MAS</a>
                </figcaption>
            </figure>
        }
    </div>
</div>